<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	id="WebApp_ID" 
	version="2.5">
	
	<display-name>Borealis-Web</display-name>
  
<!-- *********************** -->	
<servlet>
	<servlet-name>LoginServlet</servlet-name>
	<servlet-class>ca.servlets.Login</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>LoginServlet</servlet-name>
	<url-pattern>/login</url-pattern>
</servlet-mapping>

<servlet>
	<servlet-name>MainServlet</servlet-name>
	<servlet-class>ca.servlets.Main</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>MainServlet</servlet-name>
	<url-pattern>/main</url-pattern>
</servlet-mapping>

<!-- ********************** -->	

<servlet>
	<servlet-name>IndexJSP</servlet-name>
	<jsp-file>/index.jsp</jsp-file>
</servlet>

<servlet-mapping>
	<servlet-name>IndexJSP</servlet-name>
	<url-pattern>/index.html</url-pattern>
</servlet-mapping>

<servlet>	
	<servlet-name>MainJSP</servlet-name>
	<jsp-file>/main.jsp</jsp-file>
</servlet>

<servlet-mapping>
	<servlet-name>MainJSP</servlet-name>
	<url-pattern>/main.html</url-pattern>
</servlet-mapping>

<!-- *********************** -->	

  <!-- Welcome file should be the starting page - in this case the login.
  We always want to connect to a servlet first, and then get redirected to the appropriate page
  from the servlet. 
  Note that the welcome-file is the url-pattern of LoginServlet without the forward slash. -->
  <welcome-file-list>
    <welcome-file>login</welcome-file>
  </welcome-file-list>
	
</web-app>
